#include <stdio.h>
#include <stdlib.h>

int main()
{
   int t;
   long long int n,i,j;
   scanf("%d",&t);

   while (t--)
   {

       scanf("%lld",&n);
       i=n*(n+1)*(n+2)/6;
       if (n%2 == 0)
        j=n*(n+2)*(2*n-1)/24;
       else
        j=(n*n-1)*(2*n+3)/24;
       printf("%lld\n",(i+j));


   }
   return 0;
}

