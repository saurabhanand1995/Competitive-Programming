#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int g,b,max,min;
	cin >> g;
	cin >>b;
	while (g!= -1 && b!=-1)
	{
		max=g;
		min=b;
		if (g<b)
		{
		max=b;
		min=g;
		}
		if (b==0 && g == 0)
		printf("0\n");
		else
		{
			int ans=ceil((max+0.0)/(1+min));
			cout << ans <<endl;
			
		}
		
		
		cin >> g;
	cin >>b;
		
	}
	return 0;
}